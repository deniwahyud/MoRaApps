<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:gravity="center"
    android:background="@color/blue">

    <ImageView
        android:layout_marginTop="-50dp"
        android:layout_width="450dp"
        android:layout_height="284dp"
        android:background="@drawable/jmj" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="JUDUL"
        android:textColor="#ffffff"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:fontFamily="sans-serif-light"
        android:text="Jumanji The Next Level"
        android:textColor="#ffffff"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="SINOPSIS"
        android:textColor="#ffffff"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:fontFamily="sans-serif-light"
        android:text="In Jumanji: The Next Level, the four friends return again, but the game has changed. When they decided to go back to Jumanji to save one of them, they found everything was not as expected. Players must advance into hidden and unspoiled territories, from arid deserts to snowy mountains, to escape the most dangerous game in the world."
        android:textColor="#ffffff"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="430dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="CAST"
        android:textColor="#ffffff"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="450dp"
        android:fontFamily="sans-serif-light"
        android:text="Dwayne Jhonson, Karen Gilan, Kevin Hart, Jack Black"
        android:textColor="#ffffff"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="480dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="RELEASE DATE"
        android:textColor="#ffffff"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="500dp"
        android:fontFamily="sans-serif-light"
        android:text="December, 4th 2019"
        android:textColor="#ffffff"></TextView>
    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_marginTop="560dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/penilaian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5" />
    <TextView
        android:layout_marginTop="530dp"
        android:layout_marginLeft="-10dp"
        android:id="@+id/rate"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>