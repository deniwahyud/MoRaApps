<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:gravity="center"
    android:background="@color/blue">

    <ImageView
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="500dp"
        android:layout_width="450dp"
        android:layout_height="284dp"
        android:background="@drawable/doctor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="TITLE"
        android:textColor="#ffffff"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:fontFamily="sans-serif-light"
        android:text="Doctor Sleep"
        android:textColor="#ffffff"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="SYNOPSIS"
        android:textColor="#ffffff"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:fontFamily="sans-serif-light"
        android:text="Still having a great trauma when he was little in Overlook, and Torrance has struggled to find peace. However, the peace was destroyed when he had to deal with Abra, a brave teenager with extreme extrasensoral power, known as Shining."
        android:textColor="#ffffff"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="CAST"
        android:textColor="#ffffff"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        android:fontFamily="sans-serif-light"
        android:text="Ewan McGregor, Rebecca Ferguson, Kyliagh Curran, Zahn McClarnon"
        android:textColor="#ffffff"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="465dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="RELEASE DATE"
        android:textColor="#ffffff"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="485dp"
        android:fontFamily="sans-serif-light"
        android:text="December, 4th 2019"
        android:textColor="#ffffff"></TextView>
    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_marginTop="545dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/penilaian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5" />
    <TextView
        android:layout_marginTop="515dp"
        android:layout_marginLeft="-10dp"
        android:id="@+id/rate"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>